# Application Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=Job Automation Platform

# Security
SECRET_KEY=your-secret-key-here-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://jobautomation:securepassword123@localhost:5432/jobautomation

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# AWS S3 (Optional - for file storage)
S3_BUCKET=job-automation-files
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
MAX_FILE_SIZE=10485760

# Selenium Settings
SELENIUM_HEADLESS=true
SELENIUM_TIMEOUT=30
MAX_CONCURRENT_APPLICATIONS=5

# Crawler Settings
CRAWLER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
CRAWLER_RATE_LIMIT=2

# Job Platforms
SUPPORTED_PLATFORMS=linkedin,indeed,glassdoor,ziprecruiter,monster
